{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@dequanto/*": ["node_modules/dequanto/src/*"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.js", "@dequanto"],
  "include": ["src/**/*"]
}
